    <title>State Foods Homepage</title>
    <style>
        /* Reset some default margin and padding */
body, h1, h2, p {
    margin: 0;
    padding: 0;
}

/* Style the header */
header {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 20px;
}

/* Style the navigation menu */
nav {
    background-color: #444;
    text-align: center;
    padding: 10px;
}

nav a {
    color: #fff;
    text-decoration: none;
    margin: 0 20px;
}

/* Style the container for food items */
.container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 20px;
}

/* Style individual food items */
.food {
    width: calc(33.33% - 20px); /* Distribute in a column of three with some spacing */
    padding: 20px;
    margin: 10px;
    border: 1px solid #ddd;
    text-align: center;
    background-color: #f9f9f9; /* Light background color for each food item */
    transition: transform 0.2s ease-in-out; /* Add a subtle hover effect */
}

.food:hover {
    transform: scale(1.05); /* Enlarge the item on hover */
}

.food h2 {
    margin-bottom: 10px;
    color: #333; /* Darken the heading text color */
}

.food img {
    max-width: 100%;
    height: auto;
}

    </style>
</head>
